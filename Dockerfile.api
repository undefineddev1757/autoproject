FROM node:20-alpine
WORKDIR /app

ARG NODE_ENV=production
ENV NODE_ENV=${NODE_ENV}

COPY package.json package-lock.json* pnpm-lock.yaml* ./
RUN corepack enable \
    && corepack prepare pnpm@latest --activate \
    && pnpm install --frozen-lockfile

COPY . .
EXPOSE 5000
CMD ["sh", "-c", "pnpm run dev:server"]
